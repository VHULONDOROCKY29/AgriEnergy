@model IEnumerable<FarmCentralApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #d3f9d8; /* nice green background */
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: #006400; /* Dark green */
        margin-top: 50px;
    }

    a {
        color: #006400; /* Dark green */
        text-decoration: none;
    }

    form {
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 80%;
        margin: auto;
        background-color: #f0fff4; /* Light green background for table */
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }

    th, td {
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #006400; /* Dark green header */
        color: white;
    }

    tr:nth-child(even) {
        background-color: #d3f9d8; /* Alternate row background color */
    }

    tr:nth-child(odd) {
        background-color: #f0fff4; /* Alternate row background color */
    }
</style>

<h1>Products</h1>
<div>
    <a asp-action="Index">Back to Farmers</a>
</div>

<form asp-controller="Farmers" asp-action="Products">
    <p>
        <input type="submit" value="Show all products" />
    </p>
</form>

<form asp-controller="Farmers" asp-action="Products">
    <p>
        <input type="submit" value="Show all products" /> | Product Type: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" /> | Date Range: <input type="date" name="fromDate" />
        <input type="date" name="toDate" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Quantity
            </th>
            <th>
                Product Type
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    R @Html.DisplayFor(modelItem => item.ProductPrice).00
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

