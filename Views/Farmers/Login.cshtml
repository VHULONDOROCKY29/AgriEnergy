@model FarmCentralApp.Models.Farmer

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #00FF00, #0000FF); /* Green to blue gradient background */
        margin: 0;
        padding: 0;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
    }

    form {
        margin: auto;
        width: 80%;
        max-width: 400px;
        background-color: #f0fff4; /* Light green background for form */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        border: none;
        background-color: #006400; /* Dark green button */
        color: white;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: #004d00; /* Dark green hover color */
        }

    .text-danger {
        color: red;
    }
</style>

<h3 style="color:red;">@ViewBag.Login</h3>
<h3 style="color:green;">@ViewBag.Yay</h3>

<h4>Farmer Login</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FarmerId" class="control-label">Farmer ID</label>
                <input asp-for="FarmerId" class="form-control" />
                <span asp-validation-for="FarmerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
