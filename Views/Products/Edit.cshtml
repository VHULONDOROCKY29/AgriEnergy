@model FarmCentralApp.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #d3f9d8; /* Nice green background */
            margin: 0;
            padding: 0;
            text-align: center;
            color: #006400; /* Dark green text color */
        }

        h4 {
            margin-top: 50px;
            font-size: 2rem;
        }

        form {
            background-color: #f0fff4; /* Light green background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #006400; /* Dark green label color */
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #006400; /* Dark green border */
        }

        input[type="submit"] {
            background-color: #006400; /* Dark green submit button */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #004d00; /* Dark green hover color */
            }

        .back-link {
            margin-top: 20px;
        }

            .back-link a {
                color: #006400; /* Dark green link color */
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .back-link a:hover {
                    color: #004d00; /* Dark green hover color */
                }
    </style>
</head>
<body>
    <h4>Edit a Product</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-label">Product Price</label>
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductQuantity" class="control-label">Product Quantity</label>
                    <input asp-for="ProductQuantity" class="form-control" />
                    <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductType" class="control-label">Product Type</label>
                    <input asp-for="ProductType" class="form-control" />
                    <span asp-validation-for="ProductType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDate" class="control-label">Date</label>
                    <input asp-for="ProductDate" class="form-control" />
                    <span asp-validation-for="ProductDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="back-link">
        <a href="@Url.Action("Index", "Products")">Back to List</a>
    </div>
</body>
</html>

